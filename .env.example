# ============================================
# REDIS CONFIGURATION (FIX #3 & #10)
# ============================================
# Paste your Redis URL here from Redis Cloud dashboard
REDIS_URL=redis://:your_password@redis-12345.c12345.us-east-1-2.ec2.cloud.redis.com:6379/0
REDIS_DB=0

# ============================================
# SENTRY ERROR TRACKING (FIX #2)
# ============================================
# Get from: https://sentry.io/
# Format: https://key@organization.ingest.sentry.io/projectid
SENTRY_DSN=https://your_key@o123456.ingest.sentry.io/123456

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Your Supabase or local PostgreSQL connection
DATABASE_URL=postgresql://user:password@localhost:5432/trulyinvoice
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ============================================
# SECURITY
# ============================================
# Change these in production!
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# ============================================
# RAZORPAY PAYMENT (Already 9.8/10)
# ============================================
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxx

# ============================================
# AI & VISION APIs
# ============================================
GEMINI_API_KEY=your_gemini_api_key
GOOGLE_VISION_API_KEY=your_vision_api_key
VISION_API_ENABLED=true
USE_GEMINI_FOR_OCR=false
CONFIDENCE_THRESHOLD=0.85

# ============================================
# SUPABASE (Storage & Auth)
# ============================================
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ============================================
# EMAIL CONFIGURATION (FIX #12)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SENDER_EMAIL=your_email@gmail.com
SENDER_NAME=TrulyInvoice

# ============================================
# FILE UPLOAD
# ============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# ============================================
# PLAN LIMITS
# ============================================
STARTER_SCANS_LIMIT=30
PRO_SCANS_LIMIT=200
BUSINESS_SCANS_LIMIT=750

# ============================================
# DATA RETENTION (Days)
# ============================================
STARTER_DATA_RETENTION_DAYS=60
PRO_DATA_RETENTION_DAYS=365
BUSINESS_DATA_RETENTION_DAYS=-1

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS_STR=http://localhost:3000,http://localhost:8000,https://yourdomain.com
